      <children>
         <Label text="CHOOSE A MODE" textFill="WHITE">
            <font>
               <Font size="25.0" />
            </font>
         </Label>
         <!-- clicking button should start/resume the game -->
         <Button fx:id="startGameButton" maxWidth="1.7976931348623157E308" onAction="#switchToGame" prefHeight="75.0" text="STANDARD" textAlignment="CENTER">
            <font>
               <Font size="20.0" />
            </font>

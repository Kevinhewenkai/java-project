               <Insets top="30.0" />
            </VBox.margin>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </Button>
         <Button fx:id="suviveModeButton" disable="false" layoutX="80.0" layoutY="190.0" maxWidth="1.7976931348623157E308" onAction="#switchToSurviveGame" prefHeight="75.0" text="SURVIVAL" textAlignment="CENTER">
            <font>
               <Font size="20.0" />
            </font>
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin>
         </Button>
         <Button fx:id="berserkerModeButton" disable="false" layoutX="80.0" layoutY="285.0" maxWidth="1.7976931348623157E308" onAction="#switchToBerserkerGame" prefHeight="75.0" text="BERSERKER" textAlignment="CENTER">
            <font>
               <Font size="20.0" />
            </font>
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin>
         </Button>
         <Button fx:id="confusingModeButton" disable="false" layoutX="80.0" layoutY="360.0" maxWidth="1.7976931348623157E308" onAction="#switchToConfusingMode" prefHeight="75.0" text="CONFUSING" textAlignment="CENTER">
            <font>
               <Font size="20.0" />
            </font>
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin>
         </Button>
      </children>
      <padding>
         <Insets bottom="100.0" left="70.0" right="70.0" top="100.0" />
      </padding>
   </VBox>
</HBox>

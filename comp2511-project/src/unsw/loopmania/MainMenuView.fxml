<HBox prefHeight="606.0" prefWidth="978.0" style="-fx-background-color: #1F1F1F#1F1F1F #1F1F1F#1F1F1F;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <VBox prefHeight="500.0" prefWidth="450.0" style="-fx-background-color: #000000#000000 #000000#000000;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
      <children>
         <Label text="LOOP" textFill="WHITE">
            <font>
               <Font size="80.0" />
            </font>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            <padding>
               <Insets left="70.0" right="70.0" />
            </padding>
         </Label>
         <Label layoutX="119.0" layoutY="244.0" text="MANIA" textFill="WHITE">
            <font>
               <Font size="80.0" />
            </font>
            <padding>
               <Insets left="70.0" right="70.0" />
            </padding>
         </Label>
         <Label alignment="CENTER" contentDisplay="CENTER" text="By The Blinkers" textFill="WHITE">
            <font>
               <Font name="System Italic" size="19.0" />
            </font>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
            <padding>
               <Insets left="70.0" right="70.0" />
            </padding>
         </Label>
         <Label alignment="CENTER" contentDisplay="CENTER" layoutX="80.0" layoutY="318.0" text="Lachy, Mickey, Benji, Kevin, and Jacob" textFill="WHITE">
            <font>
               <Font name="System Italic" size="13.0" />
            </font>
            <padding>
               <Insets left="70.0" right="70.0" top="5.0" />
            </padding>
         </Label>
         <Region VBox.vgrow="ALWAYS" />
         <VBox fillWidth="false" style="-fx-background-color: #1F1F1F#1F1F1F #1F1F1F#1F1F1F #1F1F1F#1F1F1F #1F1F1F#1F1F1F;">
            <children>
               <Label text="Fight enemies, collect cards, gear up" textAlignment="CENTER" textFill="WHITE" />
               <Label text="Hit ENTER to use a health potion" textAlignment="CENTER" textFill="WHITE" />
               <Label text="Good luck" textAlignment="CENTER" textFill="WHITE" />
            </children>
            <padding>
               <Insets bottom="25.0" left="25.0" top="25.0" />
            </padding>
            <VBox.margin>
               <Insets bottom="45.0" left="70.0" right="70.0" />
